/* a good observation for negative inputs and integer overflow part*/

class Solution {
public:
    bool isPowerOfTwo(int n) {
                              if(n==-2147483648||n==0)
                                  return false;
                              else if((n&(n-1))==0)
                                  return true;
                              else
                                  return false;
                              }
        
    
};
